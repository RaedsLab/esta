{
  "name": "este",
  "version": "1.0.0",
  "description": "The Simplest ElasticSearch Node.js Client'",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "dev": "nodemon test/followers.js",
    "quick": "./node_modules/tape/bin/tape ./test/*.js",
    "test": "./node_modules/.bin/istanbul cover ./node_modules/tape/bin/tape ./test/*.js",
    "coverage": "./node_modules/.bin/istanbul cover ./node_modules/tape/bin/tape ./test/*.js && istanbul check-coverage --statements 100 --functions 100 --lines 100 --branches 100",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "jshint": "./node_modules/jshint/bin/jshint -c .jshintrc --exclude-path .gitignore ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nelsonic/este.git"
  },
  "keywords": [
    "ElasticSearch",
    "Client",
    "Node",
    "Zero Dependencies"
  ],
  "author": "nelsonic <nodecoder@gmail.com> (https://github.com/nelsonic)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nelsonic/este/issues"
  },
  "homepage": "https://github.com/nelsonic/este",
  "devDependencies": {
    "chalk": "^0.5.1",
    "coveralls": "^2.11.2",
    "istanbul": "^0.3.4",
    "jshint": "^2.5.10",
    "pre-commit": "0.0.9",
    "tape": "^3.0.3"
  },
  "pre-commit": [
    "jshint",
    "coverage",
    "coveralls"
  ]
}
